@model CHUSHKA.Models.Products.DetailsProductViewModel;

<div class="container-fluid">
    <header>
        <nav class="navbar navbar-expand-lg chushka-bg-color">
            <a class="navbar-brand nav-link-white" href="/">CHUSHKA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav right-side">
                    <li class="nav-item">
                        <a class="nav-link nav-link-white" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-white" href="/products/create">Create Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-white" href="/orders/all">All Orders</a>
                    </li>
                </ul>
                <ul class="navbar-nav left-side">
                    <li class="nav-item">
                        <a class="nav-link nav-link-white" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="mt-3 mb-5">
        <h1 class="text-center h1">@Model.Name</h1>
        <hr class="hr-2 bg-dark" />
        <div class="product-type-holder half-width mx-auto d-flex justify-content-between">
            <h3 class="text-center">Type: @Model.Type</h3>
            <h3 class="text-center">Price: $@Model.Price</h3>
        </div>
        <hr class="hr-2 bg-dark" />
        <h3 class="text-center">Description</h3>
        <div class="product-description-holder">
            <p class="text-center mt-4">
                @Model.Description
            </p>
        </div>
        <hr class="hr-2 bg-dark" />
        <h3 class="text-center">Actions</h3>
        <div class="product-action-holder mt-4 half-width mx-auto d-flex justify-content-around">
            <a class="btn chushka-bg-color" asp-action="Order" asp-route-id="@Model.Id">Order</a>
            <a class="btn chushka-bg-color" asp-action="Edit" asp-route-id="@Model.Id" >Edit</a>
            <a class="btn chushka-bg-color" asp-action="Delete" asp-route-id="@Model.Id" >Delete</a>
        </div>
    </main>
</div>